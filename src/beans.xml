<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="client" class="app.operations.Client">
        <property name="cashMachine" ref="cashMachine"/>
    </bean>
    <bean id="clientAccount" class="app.operations.account.Account"/>
    <bean id="cashMachine" class="app.operations.cash.PayBox">
        <property name="clientsAccount" ref="clientAccount"/>
    </bean>

</beans>